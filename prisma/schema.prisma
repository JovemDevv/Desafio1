// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  createdAt DateTime
  updatedAt DateTime @updatedAt
  // Adicione o campo de relação oposto para 'user'
  notes     Note[]
}

model Note {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime @default(now())
  userId      String // Chave estrangeira referente ao User
  user        User     @relation(fields: [userId], references: [id])
}
